	<script>
		ScrollTrigger.create({
			trigger: ".company_sub03_con > .contents_con > .bg_con > .img_con",
			start: "top 55%",
			delay:0.3,
			onEnter: () => {
				document.querySelector(".company_sub03_con > .contents_con > .bg_con > .img_con").classList.add("on");
			},
		//	markers:true,
		});
		
		function pc_ani() {
			// 연혁 애니메이션
			const tl = gsap.timeline();
			const section = document.querySelector(".company_sub03_con > .contents_con")
			const txt_box = document.querySelector(".company_sub03_con > .contents_con > .bg_con > .txt_con")
			const list_con = document.querySelectorAll(".company_sub03_con > .contents_con > .history_con > ul > li")

			tl.from(txt_box, {
				y:100,
				autoAlpha:0,
				duration:0.8,
				ease:"circ.out",
			})

			list_con.forEach((item, index) => {
				gsap.from(item, {
					autoAlpha:0,
					y:50,
					scrollTrigger: {
						trigger: item,
						start: "top 70%",
						end: "bottom 70%",
					//	markers: true,
					//	toggleActions:"play none none reset"
					},
				});
			});

			ScrollTrigger.create({
				trigger:section,
				start: "top 40%",
				end: "bottom 40%",
			//	markers:true,
				animation:tl,
			//	toggleActions:"play reverse play reset"
			})
		}

		function mo_ani() {
			// 연혁 애니메이션
			const tl = gsap.timeline();
			const section = document.querySelector(".company_sub03_con > .contents_con")
			const txt_box = document.querySelector(".company_sub03_con > .contents_con > .bg_con > .txt_con")
			const list_con = document.querySelectorAll(".company_sub03_con > .contents_con > .history_con > ul > li")

			tl.from(txt_box, {
				y:100,
				autoAlpha:0,
				duration:1.2,
				ease:"circ.out",
			})

			list_con.forEach((item, index) => {
				gsap.from(item, {
					autoAlpha:0,
					y:50,
					scrollTrigger: {
						trigger: item,
						start: "top 70%",
						end: "bottom 70%",
					//	markers: true,
					//	toggleActions:"play none none reset"
					},
				});
			});

			ScrollTrigger.create({
				trigger:section,
				start: "top 25%",
				end: "bottom 25%",
			//	markers:true,
				animation:tl,
			//	toggleActions:"play reverse play reset"
			})
		}
		

		gsap.registerPlugin(ScrollTrigger, CustomEase)

		ScrollTrigger.matchMedia({
			// pc
			"(min-width: 1025px)": function () {	
				pc_ani();
			},

			// mobile
			"(max-width: 1024px)": function () {	
				mo_ani();
			},
			
			// all
			"all": function () {
				
			}  
		});
	</script>

